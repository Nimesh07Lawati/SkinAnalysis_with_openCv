<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinCareAiIntegration.AndroidAiSetUp.MainView"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

        <Label Text="Skin Care AI"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Frame BorderColor="Gray"
               CornerRadius="10"
               Padding="0"
               HasShadow="True"
               HeightRequest="480"
               WidthRequest="640"
               HorizontalOptions="Center">
            <Image x:Name="CameraPreview"
                   WidthRequest="640"
                   HeightRequest="480"
                   Aspect="AspectFill" />
        </Frame>

        <Label x:Name="SkinAnalysisLabel"
               Text="Analysis result will appear here"
               FontSize="16"
               TextColor="DarkBlue"
               HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Button Text="Capture Photo" Clicked="OnStartCameraClicked" />
            <Button Text="Analyze Skin" Clicked="OnAnalyzeSkinClicked" />
        </HorizontalStackLayout>

        <Button x:Name="CameraButton"
                Text="Start Camera"
                Clicked="OnStartCameraClicked"
                WidthRequest="200"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>